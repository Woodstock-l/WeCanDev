{% extends 'layout.html.twig' %}

{% block page_content %}
<div class="card-group mt-5">
    {% for entity in entities %}
    <div class="card {% if not entity.published %}bg-danger{% endif %}">
    {% if entity.image is not empty %}
        <img class="card-img-top" src="{{ asset('/uploads/' ~ entity.image.path) }}" alt="{{ entity.title }}">
    {% endif %}
    <div class="card-body">
      <h5 class="card-title"><a href="{{ path('tutorial_show', {'id': entity.id}) }}">{{ entity.title }}</a></h5>

      <p class="card-text">{{ entity.content|raw|nl2br }}</p>

        <ul class="notes-echelle">
            <li>
                <label for="note01" title="Note&nbsp;: 1 sur 5">{{ 'tutorial.star'|trans|parse_icons }}</label>
                <input type="radio" name="notesA" id="note01" value="1" />
            </li>
            <li>
                <label for="note02" title="Note&nbsp;: 2 sur 5">{{ 'tutorial.star'|trans|parse_icons }}</label>
                <input type="radio" name="notesA" id="note02" value="2" />
            </li>
            <li>
                <label for="note03" title="Note&nbsp;: 3 sur 5">{{ 'tutorial.star'|trans|parse_icons }}</label>
                <input type="radio" name="notesA" id="note03" value="3" />
            </li>
            <li>
                <label for="note04" title="Note&nbsp;: 4 sur 5">{{ 'tutorial.star'|trans|parse_icons }}</label>
                <input type="radio" name="notesA" id="note04" value="4" />
            </li>
            <li>
                <label for="note05" title="Note&nbsp;: 5 sur 5">{{ 'tutorial.star'|trans|parse_icons }}</label>
                <input type="radio" name="notesA" id="note05" value="5" />
            </li>
        </ul>
        <p>     Donnez une note Ã  ce tutorial.</p>
      <p class="card-text">{{ entity.content|raw }}</p>

      <p class="card-text"><small class="text-muted">{{ entity.dateUpdate|date('d/m/Y H:i') }}</small></p>
    </div>
  </div>
    {% endfor %}
</div>
<hr/>
<nav aria-label="Page">
    <ul class="pagination">
        {% for p in 1..nbPages %}
        <li class="page-item {% if p == page %}active{% endif %}"><a class="page-link" href="{{ path('tutorial_index', {'page': p}) }}">{{ p }}</a></li>
        {% endfor %}
    </ul>
</nav>
{% endblock %}