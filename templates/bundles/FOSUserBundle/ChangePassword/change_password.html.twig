{% extends 'layout.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('build/css/front.css') }}">
{% endblock %}

{% block page_content %}
<header class="main-header">
    {% embed 'decorator/_navbar.html.twig' with {'class': 'fixed-top navbar-dark bg-primary', 'brandUrl': path('index') } %}
        {% block brand %}
            WeCanDev
        {% endblock %}

        {% block menu %}
            {{ knp_menu_render('user', {'style': 'horizontal-right'})}}
        {% endblock %}
    {% endembed %}
</header>

{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
    {{ form_widget(form) }}
    <div>
        <input class="btn btn-primary" type="submit" value="{{ 'change_password.submit'|trans }}">
    </div>
{{ form_end(form) }}
{% endblock %}