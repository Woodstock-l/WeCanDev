{% extends 'layout.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('build/css/front.css') }}">
{% endblock %}

{% block page_content %}
<header class="main-header">
    {% embed 'decorator/_navbar.html.twig' with {'class': 'fixed-top navbar-dark bg-primary', 'brandUrl': path('index') } %}
        {% block brand %}
            WeCanDev
        {% endblock %}

        {% block menu %}
            {{ knp_menu_render('user', {'style': 'horizontal-right'})}}
        {% endblock %}
    {% endembed %}
</header>

<br>

<h2>Mes informations personnelles</h2>

<ul class="list-group">
    <li class="list-group-item">{{ user.imageProfile }}</li>
    <li class="list-group-item">Pseudo : {{ user.username }}</li>
    <li class="list-group-item">E-mail : {{ user.email }}</li>
</ul>

<br>

<div class="btn-group">
    <a class="btn btn-primary" href="{{ path('fos_user_profile_edit') }}">Modifier le profil</a>
    <a class="btn btn-secondary" href="{{ path('fos_user_change_password') }}">Changer le mot de passe</a>
</div>

