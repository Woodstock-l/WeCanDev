{% extends 'layout.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('build/css/front.css') }}">
{% endblock %}

{% block page_content %}
<header class="main-header">
    {% embed 'decorator/_navbar.html.twig' with {'class': 'fixed-top navbar-dark bg-primary', 'brandUrl': path('index') } %}
        {% block brand %}
            WeCanDev
        {% endblock %}

        {% block menu %}
            {{ knp_menu_render('user', {'style': 'horizontal-right'})}}
        {% endblock %}
    {% endembed %}
</header>

<br>

<h2>Mes informations personnelles</h2>

<ul class="list-group">
    <li class="list-group-item">Nom : {{ user.name }}</li>
    <li class="list-group-item">Prénom : {{ user.firstname }}</li>
    <li class="list-group-item">Pseudo : {{ user.username }}</li>
    <li class="list-group-item">E-mail : {{ user.email }}</li>
</ul>

<br>

<h2>Mes favoris</h2>
{# {{ render(controller('App\\Controller\\TutorialController::recentTutorials')) }} #}

<a class="btn btn-dark" href="{{ path('admin_tutorial_new') }}">Créer un nouveau tutorial</a>
{% endblock %}